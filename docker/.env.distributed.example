# =============================================================================
# Baram Distributed Crawler Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
#
# Required: POSTGRES_PASSWORD, OPENSEARCH_INITIAL_ADMIN_PASSWORD
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_DB=baram
POSTGRES_USER=baram
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# OpenSearch Configuration
# -----------------------------------------------------------------------------
OPENSEARCH_INITIAL_ADMIN_PASSWORD=YourSecurePassword123!
OPENSEARCH_PORT=9200
OPENSEARCH_PERF_PORT=9600
OPENSEARCH_SECURITY_DISABLED=false

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_MAXMEMORY=256mb

# -----------------------------------------------------------------------------
# Coordinator Configuration
# -----------------------------------------------------------------------------
COORDINATOR_PORT=8000
COORDINATOR_LOG_LEVEL=info

# Daily rotation time (HH:MM format, KST timezone)
ROTATION_TIME=23:00
TIMEZONE=Asia/Seoul

# -----------------------------------------------------------------------------
# Crawler Instance Configuration
# -----------------------------------------------------------------------------
CRAWLER_LOG_LEVEL=info

# Heartbeat interval in seconds
HEARTBEAT_INTERVAL=30

# Rate limiting
REQUESTS_PER_SECOND=2.0
MAX_CONCURRENT=5

# -----------------------------------------------------------------------------
# Deployment Configuration
# -----------------------------------------------------------------------------
VERSION=0.1.0
COMPOSE_PROJECT_NAME=baram

# -----------------------------------------------------------------------------
# Development Tools (optional)
# -----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@baram.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
OPENSEARCH_DASHBOARDS_PORT=5601
